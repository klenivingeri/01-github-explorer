{
  "compilerOptions": {

    "lib": ["dom", "dom.iterable","esnext"],   // ajuda a trabalhar com HTML                                
    "allowJs": true,                           // podes usar tanto JS quanto JSX               
    "jsx": "react-jsx",                           
    "noEmit": true,                            
    "strict": true,                            // strict javascript               
    "moduleResolution": "node",              
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,    
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"]        // praticamente todo todo projeto esta dentro do src
}
